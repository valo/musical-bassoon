# RPCs (for local forks, these will usually be your anvil endpoints)
L1_RPC_URL=http://127.0.0.1:8545
L2_RPC_URL=http://127.0.0.1:9545

# Prefer anvil default accounts (no secrets).
# If you want to override, set L1_KEEPER_PK/L2_KEEPER_PK to 0x... private keys.
ANVIL_MNEMONIC="test test test test test test test test test test test junk"
L1_ACCOUNT_INDEX=0
L2_ACCOUNT_INDEX=0
L1_KEEPER_PK=
L2_KEEPER_PK=

# Deployed contract addresses
L1_COLLAR_VAULT=
L1_LZ_MESSENGER=
L2_TSA_RECEIVER=

# Optional start blocks (for backfill)
L1_START_BLOCK=0
L2_START_BLOCK=0

# Polling interval (ms)
POLL_MS=3000

# Max value (wei) to attach to L2 handleMessage / send* calls (LZ fees in real env)
L2_MAX_VALUE_WEI=0
